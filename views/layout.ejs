<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Secret Santa' %> - Secret Santa</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="theme-<%= typeof theme !== 'undefined' ? theme : 'default' %>">
  <header>
    <nav>
      <a href="/" class="logo">Secret Santa</a>
      <div class="nav-links">
        <a href="/">Accueil</a>
        <% if (typeof organizer !== 'undefined' && organizer) { %>
          <a href="/organizer/dashboard">Mes groupes</a>
          <a href="/organizer/settings">Mon compte</a>
          <% if (organizer.isAdmin) { %>
            <a href="/admin" class="admin-link">Administration</a>
          <% } %>
          <form action="/organizer/logout" method="POST" style="display:inline;">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button type="submit" class="nav-logout-btn">Deconnexion</button>
          </form>
        <% } else { %>
          <a href="/join">Rejoindre un groupe</a>
          <a href="/organizer/login">Espace organisateur</a>
        <% } %>
      </div>
    </nav>
  </header>

  <main>
    <% if (typeof flashSuccess !== 'undefined' && flashSuccess.length > 0) { %>
      <% flashSuccess.forEach(function(msg) { %>
        <div class="alert alert-success flash-animate"><%= msg %></div>
      <% }); %>
    <% } %>
    <% if (typeof flashError !== 'undefined' && flashError.length > 0) { %>
      <% flashError.forEach(function(msg) { %>
        <div class="alert alert-error flash-animate"><%= msg %></div>
      <% }); %>
    <% } %>
    <%- body %>
  </main>

  <footer>
    <p class="footer-default">Secret Santa</p>
    <p class="footer-noel">Secret Santa - Joyeuses fetes !</p>
  </footer>
</body>
</html>
